<div class="outer-wrapper">
    <div class="wrapper">
        <header class="main">
            <h1 class="logo"><img src="/public/images/misc/logo.png" alt="Track-r" width="128" /></h1>
        </header>
        <section class="content login">
            <form action="<%= url_for :action => :do_login %>">
                <% if @msg %>
                    <p class="error"><%= @msg %></p>
                <% end %>
                <fieldset>
                    <div class="text"><input type="text" name="login" placeholder="User Name or Email" /></div>
                    <div class="text"><input type="password" name="password" placeholder="Password" /></div>
                </fieldset>
                <fieldset>
                    <div class="text"><input type="text" name="token" placeholder="Or login using your token" /></div>
                </fieldset>
                <fieldset>
                    <div class="button green"><input type="submit" value="Login" /></div>
                </fieldset>
            </form>
        </section>
    </div><!-- .wrapper -->
    <% if System::get_property('device_name') == "iPad" %>
      <% 50.times do %>
        <br/>
      <% end %>
    <% end %>
    <% if System::get_property('platform') == "ANDROID" %>
      <% 10.times do %>
        <br/>
      <% end %>
    <% end %>
</div><!-- .outer-wrapper -->
