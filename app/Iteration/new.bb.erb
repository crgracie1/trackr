<div id="pageTitle">
    <h1>New Iteration</h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :index %>
</div>


<div id="content">

    <form method="POST" action="<%= url_for :action => :create %>">
	    <input type="hidden" name="id" value="<%= @iteration.object %>"/>
        <table>
    		
    		  <tr>
    			  <td class="itemLabel">Id: </td>
    			  <td class="itemValue"><input type="text" name="iteration[id]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Number: </td>
    			  <td class="itemValue"><input type="text" name="iteration[number]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Start: </td>
    			  <td class="itemValue"><input type="text" name="iteration[start]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Finish: </td>
    			  <td class="itemValue"><input type="text" name="iteration[finish]"/></td>
    		  </tr>
    		
        </table>
        <input type="submit" class="standardButton" value="Create" />
    </form>
</div>