<div id="pageTitle">
		<h1>Edit <%= @iteration.id%></h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :show, :id => @iteration.object %>
    <%= link_to "Delete", :action => :delete, :id => @iteration.object %>
</div>


<div id="content">
    <form method="POST" action="<%= url_for :action => :update %>">
    	<input type="hidden" name="id" value="<%= @iteration.object %>"/>
            <table>
        		
                    <tr>
            			<td class="itemLabel">Id: </td>
              			<td class="itemValue"><input type="text" name="iteration[id]" value="<%= @iteration.id %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Number: </td>
              			<td class="itemValue"><input type="text" name="iteration[number]" value="<%= @iteration.number %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Start: </td>
              			<td class="itemValue"><input type="text" name="iteration[start]" value="<%= @iteration.start %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Finish: </td>
              			<td class="itemValue"><input type="text" name="iteration[finish]" value="<%= @iteration.finish %>"/></td>
          		    </tr>
        		
            </table>
            <input type="submit" class="standardButton" value="Update" />
    </form>
</div>
