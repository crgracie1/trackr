<div id="pageTitle">
	<h1>Edit <%= @activity.name%></h1>
</div>

<div id="toolbar">
    <div id="leftItem" class="backButton"><%= link_to "Cancel", :action => :show, :id => @activity.object %></div>
    <div id="rightItem" class="regularButton"><%= link_to "Delete", :action => :delete, :id => @activity.object %></div>
</div>

<div id="content">
    <form method="POST" action="<%= url_for :action => :update %>">
            <input type="hidden" name="id" value="<%= @activity.object %>"/>
            <ul>
                
                <li>
                    <label for="activity[name]" class="fieldLabel">Name</label>
                    <input type="text" name="activity[name]" value="<%= @activity.name%>" <%= placeholder( "Name" ) %> />
                </li>
                
                <li>
                    <label for="activity[author]" class="fieldLabel">Author</label>
                    <input type="text" name="activity[author]" value="<%= @activity.author%>" <%= placeholder( "Author" ) %> />
                </li>
                
            </ul>
            <input type="submit" class="standardButton" value="Update" />
    </form>
</div>