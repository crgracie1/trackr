<div id="pageTitle">
		<h1>Edit <%= @activity.name%></h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :show, :id => @activity.object %>
    <%= link_to "Delete", :action => :delete, :id => @activity.object %>
</div>


<div id="content">
    <form method="POST" action="<%= url_for :action => :update %>">
    	<input type="hidden" name="id" value="<%= @activity.object %>"/>
            <table>
        		
                    <tr>
            			<td class="itemLabel">Name: </td>
              			<td class="itemValue"><input type="text" name="activity[name]" value="<%= @activity.name %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Author: </td>
              			<td class="itemValue"><input type="text" name="activity[author]" value="<%= @activity.author %>"/></td>
          		    </tr>
        		
            </table>
            <input type="submit" class="standardButton" value="Update" />
    </form>
</div>
